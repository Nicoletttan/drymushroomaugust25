<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon_strawberry.jpg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<slot />
		<!-- Sparkle container -->
		<div id="sparkle-container"></div>
        <script>
            // Change cursor to strawberry GIF
            document.body.style.cursor = 'url("/strawberry_cursor1.png"), auto';

            // Sparkle effect on click
            document.addEventListener('click', function(e) {
                const sparkle = document.createElement('img');
                sparkle.src = '/sparkle2.gif'; // Place your sparkle gif in public folder
                sparkle.style.position = 'absolute';
                sparkle.style.left = (e.pageX - 16) + 'px';
                sparkle.style.top = (e.pageY - 16) + 'px';
                sparkle.style.pointerEvents = 'none';
                sparkle.style.width = '50px';
                sparkle.style.height = '50px';
                sparkle.style.zIndex = '9999';
                document.body.appendChild(sparkle);
                setTimeout(() => sparkle.remove(), 600); // Remove after 0.6s
            });
        </script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
